rust_binary {
    name: "crosvm",
    defaults: ["crosvm_defaults"],
    host_supported: true,
    prefer_rlib: true,
    crate_name: "crosvm",
    srcs: ["src/main.rs"],

    target: {
        linux_bionic_arm64: {
            relative_install_path: "aarch64-linux-bionic",
