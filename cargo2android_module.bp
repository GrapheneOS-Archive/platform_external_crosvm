arch: {
    x86_64: {
        rustlibs: ["libx86_64_rust"],
    },
    arm64: {
        rustlibs: ["libaarch64"],
    },
},
target: {
    host: {
        features: [
            "gfxstream",
            "gpu",
        ],
    },
    linux_glibc_x86_64: {
        features: [
            "gdb",
            "gdbstub",
        ],
        rustlibs: [
            "libgdbstub",
            "libgdbstub_arch",
            "libthiserror",
        ],
    },
},
ld_flags: [
    "-Wl,--rpath,\\$$ORIGIN",
    "-Wl,--rpath,\\$$ORIGIN/../../lib64",
]